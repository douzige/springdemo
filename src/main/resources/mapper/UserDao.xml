<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="chen.firstSpring.dao.UserDao">


   <select id="findUserId" parameterType="int"  resultType="chen.firstSpring.po.User">
       SELECT  *
       from  op_user_info
       WHERE  id = #{id}  LIMIT 1
   </select>


</mapper>